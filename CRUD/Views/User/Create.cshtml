@model CreateUserViewModel

@{
    ViewData["Title"] = "Create User";
}

<div class="row">
    <div class="col-4 offset-4">
        <h1 class="display-4 text-center pb-2">
            <img src="~/src/fibus_logo.png" height="100" />
        </h1>
    </div>
</div>

<div class="row">
    <div class="col-6 offset-3">
        <div asp-validation-summary="ModelOnly" class="text-danger small"></div>
        <form method="post">
            <div class="form-group mb-3">
                <label asp-for="FullName" class="form-label">İsim giriniz.</label>
                <input asp-for="FullName" class="form-control" type="text" />
                <span asp-validation-for="FullName" class="text-danger small"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Username" class="form-label">Kullanıcı Adı Giriniz</label>
                <input asp-for="Username" class="form-control" type="text" />
                <span asp-validation-for="Username" class="text-danger small"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label">Şifre giriniz</label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="RePassword" class="form-label">Şifreyi tekrar giriniz</label>
                <input asp-for="RePassword" class="form-control" type="password" />
                <span asp-validation-for="RePassword" class="text-danger small"></span>
            </div>
            <div class="form-group mb-3">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" asp-for="Locked">
                    <label class="form-check-label" asp-for="Locked">
                        Kilitli
                    </label>
                </div>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Role" class="form-label">Rol</label>
                <select asp-for="Role" class="form-select ">
                    <option value="">Rol Seçiniz.</option>
                    <option value="admin">Yönetici</option>
                    <option value="admin">Kullanıcı</option>
                </select>
                <span asp-validation-for="Role" class="text-danger small"></span>
            </div>
            <div class="form-group mb-3">
                <button type="submit" class="btn btn-primary d-block ">
                    <i class="fa-solid fa-save me2"></i>
                    Kaydet
                </button>
            </div>
        </form>
    </div>
</div>