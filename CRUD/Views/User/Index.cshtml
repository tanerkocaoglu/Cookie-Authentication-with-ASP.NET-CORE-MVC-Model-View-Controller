@model List<UserModel>

<div class="row">
    <div class="col">
        <h1 class="display-4">Users</h1>
        <hr />
    </div>
</div>

<div class="row mb-3">
    <div class="col">
        <a asp-action="Create" class="btn btn-primary btn-sm"><i class="fa fa-plus me-2">Yeni kullanıcı</i></a>
    </div>
</div>

<div class="row mb-3">
    <div class="col">
        <table class=" table table-hover table-sm">
            <thead>
                <tr>
                    <th>FullName</th>
                    <th>UserName</th>
                    <th>Locked</th>
                    <th>Role</th>
                    <th>CreatedAt</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (UserModel user in Model)
                {
                    <tr>
                        <td>@user.FullName</td>
                        <td>@user.Username</td>
                        <td>
                            @if (user.Locked)
                            {
                                <i class="fa fa-check text-success"></i>
                            }
                            else
                            {
                                <i class="fa fa-check text-danger"></i>
                            }
                        </td>
                        <td>@user.CreatedAt</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-info btn-sm"><i class="fa fa-edit me-2"></i>Düzenle</a>
                            <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger btn-sm"><i class="fa fa-trash"></i>Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>